/**home.wxss**/
.swiper-wrapper {
  width: 100%;
  height:22%;
}

.product-menu {
  background-color: #fff;
  margin: 5px 0;
  width: 100%;
}
.hot-product{
  background-color: #f4f5f7;
  padding-bottom: 30px;
}
.hot-product .hot-item{ 
  background-color: #fff;
  border-bottom: 1px solid #ddd;
  margin-bottom: 8px;
  padding: 15px 10px;
}
.hot-product .item-img{
  display: block;
  height: 110px;
}
.hot-product  .item-desc{
  color: #3d3d3d;
  margin: 10px 0 5px;
}
.hot-product .item-price{ 
  color: #F40;
}
.hot-product .item-btn{ 
  background-color: #F40;
  border-radius: 3px;
  color: #fff;
  font-size: 12px;
  padding: 5px 0;
  text-align: center;
  width: 60px;
}